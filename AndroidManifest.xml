<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.arrays">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Perfume"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".Summer"
            android:label="Summer Scents"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".Spring"
            android:label="Spring Scents"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Fall"
            android:label="Fall Scents"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".Winter"
            android:label="Winter Scents"
            android:parentActivityName=".MainActivity" />


    </application>

</manifest>